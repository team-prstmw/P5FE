{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": false,
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "noEmit": true,
    "paths": {
      "@/api/*": ["src/api/*"],
      "@/utils/*": ["src/utils/*"],
      "src/*": ["src/*"]
    },
    "target": "ESNext"
  },
  "outDir": "./dist/",
  "include": ["src"]
}
